<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        class="com.example.connect4.Old.FragmentDetail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/FrgDetailOLD"
        android:layout_margin="20dp"
        android:layout_weight="1"
        />
    <fragment
        class="com.example.connect4.Old.ResulPFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FrgResultOLD"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/BackButton3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/Anar_Al_Joc"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/go_back"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>